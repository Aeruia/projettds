{% extends 'base.html.twig' %}

{% block title %}user index
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row py-4">
            <div class="col-6">
                <h1 class=>Gerer les user
                </h1>
            </div>

        </div>

        <div class="row">


            <table class="table text-center">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>password</th>
                        <th>role</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody class="py-0">
                    {% for user in users  %}
                        <tr>

                            <td>{{ user.username }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.role }}</td>
                            <td>

                                <a href="{{path('user.edit', {id: user.id})}}" class="btn px-4 btn-info">Editer</a>
                                <form method="post" action="{{ path('user.delete', {id: user.id}) }}" onsubmit="return confirm('Etes-vous sÃ»r de vouloir supprimer?')">
                                    <input name="_method" type="hidden" value="DELETE">
                                    <input type="hidden" name="_token" value="{{csrf_token('delete' ~ user.id)}}">
                                    <button class="btn btn-secondary">Supprimer</button>
                                </form>
                            </td>
                        </tr>

                    </tbody>
                {% else %}
                    <tr>
                        <td colspan="17">no records found</td>
                    </tr>
                {% endfor %}
            </table>
        </div>


    </div>
{% endblock %}
